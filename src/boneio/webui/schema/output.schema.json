{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "output": {
      "type": [
        "array",
        "string"
      ],
      "items": {
        "type": [
          "object",
          "string"
        ],
        "properties": {
          "id": {
            "type": "string",
            "description": "Output ID",
            "title": "Id"
          },
          "boneio_output": {
            "type": "string",
            "description": "Reference to predefined output configuration",
            "title": "Boneio output"
          },
          "kind": {
            "type": "string",
            "enum": [
              "gpio",
              "mcp",
              "pca",
              "pcf"
            ],
            "examples": [
              "gpio"
            ],
            "description": "Output kind (mcp, gpio, etc)",
            "title": "Kind"
          },
          "mcp_id": {
            "type": "string",
            "description": "MCP ID reference",
            "title": "Mcp id"
          },
          "pca_id": {
            "type": "string",
            "description": "PCA ID to connect",
            "title": "Pca id"
          },
          "pcf_id": {
            "type": "string",
            "description": "PCF ID to connect",
            "title": "Pcf id"
          },
          "pin": {
            "type": [
              "integer",
              "string"
            ],
            "description": "Pin number",
            "title": "Pin"
          },
          "momentary_turn_on": {
            "type": [
              "number",
              "string"
            ],
            "description": "How long can this relay be off. Can\"t be used if output_type is \"none\".",
            "title": "Momentary turn on"
          },
          "momentary_turn_off": {
            "type": [
              "number",
              "string"
            ],
            "description": "How long can this relay be on. Can\"t be used if output_type is \"none\".",
            "title": "Momentary turn off"
          },
          "virtual_power_usage": {
            "type": "string",
            "description": "Virtual power usage in Watts (e.g. 9 or '9W' OR 9kW). Used for virtual energy meter.",
            "title": "Virtual power usage"
          },
          "virtual_volume_flow_rate": {
            "type": "string",
            "description": "Virtual volume flow rate in liters per hour (e.g. 9 or 9L/min OR 9L/h). Used for virtual flow meter.",
            "title": "Virtual volume flow rate"
          },
          "restore_state": {
            "oneOf": [
              {
                "type": "boolean"
              },
              {
                "type": "string",
                "enum": [
                  "yes",
                  "no",
                  "true",
                  "false",
                  "on",
                  "off"
                ],
                "x-yaml-boolean": true
              }
            ],
            "default": true
          },
          "interlock_group": {
            "type": [
              "array",
              "string"
            ],
            "description": "Restore saved state of boneio. Not used for \"none\" and output_type!",
            "title": "Interlock group"
          },
          "percentage_default_brightness": {
            "type": [
              "integer",
              "string"
            ],
            "description": "When the brightness is not set in ha, and we switch led to turn this value will be used",
            "title": "Percentage default brightness"
          },
          "output_type": {
            "type": "string",
            "enum": [
              "COVER",
              "Cover",
              "LIGHT",
              "Light",
              "NONE",
              "None",
              "SWITCH",
              "Switch",
              "VALVE",
              "Valve",
              "cover",
              "light",
              "none",
              "switch",
              "valve"
            ],
            "examples": [
              "switch"
            ],
            "description": "If HA discovery is used device if relay is light or switch. Cover if this output will be used for cover. If None is declared then any state is not published to MQTT (used for cover).",
            "title": "Output type"
          }
        },
        "required": [
          "id",
          "output_type"
        ]
      },
      "description": "https://boneio.eu/docs/black/configuration/output \n List of outputs to define.",
      "title": "Output"
    }
  }
}